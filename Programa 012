//Programa para saber se o número é primo ou não (0 a 100)
#include <stdio.h>

int main() {
  
    float x; 
  
  
    printf("Digite um número inteiro e positivo:\n");
    scanf("%f", &x);
  
    if((x/2==1)||(x/5==1)||(x/7==1)||(x/11==1)||(x/13==1)||(x/17==1)||(x/19==1)||(x/23==1)||(x/29==1)||(x/31==1)||(x/37==1)||(x/41==1)||(x/43==1)||(x/47==1)||(x/53==1)||(x/59==1)||(x/61==1)||(x/67==1)||(x/71==1)||(x/73==1)||(x/79==1)||(x/89==1)||(x/97==1)){
            printf("O número %.0f é primo",x);
            }else{
            printf("O número %.0f não é primo",x);
            }

    
  return 0;
}


